    <!--<aop:config>-->
        <!--<aop:pointcut id="txPoint" expression="execution(* service.AccountService..tran(..))"/>-->
        <!--<aop:advisor advice-ref="txAdvice" pointcut-ref="txPoint"/>-->
    <!--</aop:config>-->

</beans>